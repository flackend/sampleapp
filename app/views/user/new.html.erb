<div class="container">
  <div class="row">
    <div class="span12">
      <h1>Sign Up</h1>
      <p>Sign up for a new account below.</p>
  	</div>
  </div><!-- row -->
  <div class="row">
  	<div class="span12">
      <form class="well">
        <div class="input-prepend">
          <span class="add-on">
            <i class="icon-user"></i>
          </span><input type="text" placeholder="Name">
        </div>
        <div class="input-prepend">
          <span class="add-on">
            <i class="icon-envelope"></i>
          </span><input type="text" placeholder="Email">
        </div>
        <div class="input-prepend">
          <span class="add-on">
            <i class="icon-lock"></i>
          </span><input type="password" placeholder="Password">
        </div>
        <div class="input-prepend">
          <span class="add-on">
            <i class="icon-lock"></i>
          </span><input type="password" placeholder="Password again">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
  
  	</div>
  </div><!-- row -->
</div>